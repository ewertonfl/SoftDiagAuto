<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fatec.tg.softdiagauto">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/check_engine_1"
        android:label="SoftDiagAuto"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.ActivitySplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ActivityMenuPrincipal"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".view.ActivityInformacoesVeiculo"
            android:label="Informações do veículo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.ActivityParametros"
            android:label="Parâmetros"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.ActivityFalhas"
            android:label="Falhas"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.ActivitySobre"
            android:label="Sobre"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.ActivityListagemBluetooth"
            android:label="Conexao"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.ActivityTelaChat"
            android:label="@string/title_activity_tela_chat"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>